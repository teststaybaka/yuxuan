{
  "compilerOptions": {
    "lib": ["dom", "es5", "es2015.promise"],
    "module": "commonjs",
    "target": "es5",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "bin",
    "noUnusedLocals": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  }
}
